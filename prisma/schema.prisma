//   url      = env("DATABASE_URL")
// }
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Client {
  id    String @id @default(uuid())
  name  String
  email String @unique
  age   Int
  phone String

  available Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
